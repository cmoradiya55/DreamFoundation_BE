<%
const headerTitle = typeof title !== 'undefined' ? title : 'Welcome to Our Institution';
const headerSubtitle = typeof subtitle !== 'undefined' ? subtitle : '';
%>

<div class="email-header" style="background-color: #1E4034; color: white; padding: 30px 20px; text-align: center;">
    <h1 style="font-size: 28px; margin-bottom: 10px; margin-top: 0;">
        <%= headerTitle %>
    </h1>
    <% if (headerSubtitle) { %>
        <p style="margin: 0; font-size: 16px;"><%= headerSubtitle %></p>
    <% } %>
</div>