<%
const btnText = typeof text !== 'undefined' ? text : 'Click Here';
const btnUrl = typeof url !== 'undefined' ? url : '#';
const btnColor = typeof color !== 'undefined' ? color : '#73A997';
const btnAlign = typeof align !== 'undefined' ? align : 'center';
%>

<div class="button-container" style="text-align: <%= btnAlign %>; margin: 20px 0;">
    <a href="<%= btnUrl %>" class="email-button" style="display: inline-block; background-color: <%= btnColor %>; color: white; padding: 12px 25px; text-decoration: none; border-radius: 4px; font-weight: bold;">
        <%= btnText %>
    </a>
</div>