<div class="header">
    <% if (logoUrl) { %>
    <img src="<%= logoUrl %>" alt="<%= companyName %>" style="max-height: 60px; margin-bottom: 10px;">
    <% } %>
    <h1><%= companyName || 'Your Company' %></h1>
    <% if (tagline) { %>
    <p style="margin: 5px 0 0 0; font-size: 14px; opacity: 0.9;"><%= tagline %></p>
    <% } %>
</div>