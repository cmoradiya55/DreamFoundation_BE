<div class="footer">
    <p style="margin: 0 0 10px 0;"><strong><%= companyName || 'Your Company' %></strong></p>
    
    <% if (companyAddress) { %>
    <p style="margin: 5px 0; font-size: 13px;"><%= companyAddress %></p>
    <% } %>
    
    <% if (contactEmail || contactPhone) { %>
    <p style="margin: 5px 0; font-size: 13px;">
        <% if (contactEmail) { %>
        Email: <a href="mailto:<%= contactEmail %>" style="color: #667eea; text-decoration: none;"><%= contactEmail %></a>
        <% } %>
        <% if (contactEmail && contactPhone) { %> | <% } %>
        <% if (contactPhone) { %>
        Phone: <%= contactPhone %>
        <% } %>
    </p>
    <% } %>
    
    <% if (socialLinks) { %>
    <div style="margin: 15px 0;">
        <% if (socialLinks.facebook) { %>
        <a href="<%= socialLinks.facebook %>" style="color: #667eea; margin: 0 10px; text-decoration: none;">Facebook</a>
        <% } %>
        <% if (socialLinks.twitter) { %>
        <a href="<%= socialLinks.twitter %>" style="color: #667eea; margin: 0 10px; text-decoration: none;">Twitter</a>
        <% } %>
        <% if (socialLinks.linkedin) { %>
        <a href="<%= socialLinks.linkedin %>" style="color: #667eea; margin: 0 10px; text-decoration: none;">LinkedIn</a>
        <% } %>
    </div>
    <% } %>
    
    <p style="margin: 15px 0 5px 0; font-size: 12px; color: #95a5a6;">
        Â© <%= new Date().getFullYear() %> <%= companyName || 'Your Company' %>. All rights reserved.
    </p>
    
    <% if (unsubscribeUrl) { %>
    <p style="margin: 5px 0; font-size: 11px;">
        <a href="<%= unsubscribeUrl %>" style="color: #95a5a6; text-decoration: underline;">Unsubscribe</a>
    </p>
    <% } %>
</div>