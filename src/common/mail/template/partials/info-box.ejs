<div class="info-box" style="
    background-color: <%= typeof bgColor !== 'undefined' ? bgColor : '#e7f3ff' %>;
    border-left: 4px solid <%= typeof borderColor !== 'undefined' ? borderColor : '#2196F3' %>;
    padding: 15px;
    margin: 20px 0;
    border-radius: 4px;
">
    <% if (typeof title !== 'undefined' && title) { %>
    <p style="margin: 0 0 8px 0; font-weight: bold; color: <%= typeof titleColor !== 'undefined' ? titleColor : '#0d47a1' %>; font-size: 14px;">
        <% if (typeof icon !== 'undefined' && icon) { %><%= icon %> <% } %><%= title %>
    </p>
    <% } %>
    <p style="color: <%= typeof textColor !== 'undefined' ? textColor : '#0d47a1' %>; font-size: 14px; margin: 0;">
        <%= message %>
    </p>
</div>